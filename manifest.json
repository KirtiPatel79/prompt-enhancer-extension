{
  "manifest_version": 3,
  "name": "AI Prompt Enhancer",
  "version": "1.1",
  "description": "Enhances prompts across all major AI chat websites like ChatGPT, Claude, Gemini, and more using a custom API.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Prompt Enhancer Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://gemini.google.com/*",
        "https://*.gemini.google.com/*",
        "https://bard.google.com/*",
        "https://*.bard.google.com/*",
        "https://chat.deepseek.com/*",
        "https://*.deepseek.com/*",
        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*",
        "https://copilot.microsoft.com/*",
        "https://*.copilot.microsoft.com/*",
        "https://you.com/*",
        "https://*.you.com/*",
        "https://poe.com/*",
        "https://*.poe.com/*",
        "https://character.ai/*",
        "https://*.character.ai/*",
        "https://replika.com/*",
        "https://*.replika.com/*",
        "https://huggingface.co/chat/*",
        "https://*.huggingface.co/*",
        "https://chat.lmsys.org/*",
        "https://beta.openai.com/*",
        "https://labs.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons16.png",
    "48": "icons48.png",
    "128": "icons128.png"
  }
}